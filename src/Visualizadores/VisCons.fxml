                  </Label>
                  <Label fx:id="l5" text="Data" textFill="WHITE">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="l6" text="Local" textFill="WHITE">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="l7" text="Horario" textFill="WHITE">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="l8" text="Estado" textFill="WHITE">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
      <Separator />
      <HBox fx:id="hBox" alignment="CENTER" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#voltar" text="Voltar" />
            <Button fx:id="exclui" mnemonicParsing="false" onAction="#excluir" text="Desmarcar" />
            <Button fx:id="inicia" mnemonicParsing="false" onAction="#iniciar" text="Iniciar Consulta" />
         </children>
      </HBox>
   </children>
</VBox>
