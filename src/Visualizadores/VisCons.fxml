<VBox fx:id="vBox" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Visualizadores.VisConsController">
   <children>
      <Separator />
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <VBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Nome do Médico">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label text="CRM do Médico">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
